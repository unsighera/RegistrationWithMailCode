<Window x:Class="RegistrationWithMailCode.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistrationWithMailCode"
        mc:Ignorable="d"
        Title="CodeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Code" HorizontalAlignment="Center"/>
            <TextBox x:Name="CodeTB" Width="300" Height="25" Margin="5"/>
            
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button x:Name="AcceptBtn" Margin="5" Content="Подтвердить" Click="AcceptBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
